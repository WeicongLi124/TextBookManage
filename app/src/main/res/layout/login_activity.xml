<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_rl"
    android:focusableInTouchMode="true"
    android:background="@mipmap/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="#67ffffff"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="250dp"
            android:layout_height="350dp">
            <TextView
                android:text="教材征订管理系统"
                android:textSize="20sp"
                android:textColor="#000000"
                android:layout_marginTop="-30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/userName_rl"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <EditText
                        android:id="@+id/login_userName_edt"
                        android:textSize="16sp"
                        android:hint="请输入学号或工号"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:textColorHint="@color/login_hintColor"
                        android:background="@drawable/login_border"
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:paddingStart="45dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="225dp"
                        android:layout_height="45dp" />
                    <LinearLayout
                        android:id="@+id/userName_Image"
                        android:gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp">
                        <ImageView
                            android:background="@mipmap/account"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/password"
                    android:orientation="horizontal"
                    android:layout_below="@id/userName_rl"
                    android:layout_marginTop="22dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp">
                    <EditText
                        android:id="@+id/login_password_edt"
                        android:textSize="16sp"
                        android:hint="请输入密码"
                        android:inputType="numberPassword"
                        android:maxLines="1"
                        android:maxLength="7"
                        android:singleLine="true"
                        android:textColorHint="@color/login_hintColor"
                        android:background="@drawable/login_border"
                        android:textCursorDrawable="@drawable/edit_cursor"
                        android:paddingStart="45dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_width="225dp"
                        android:layout_height="45dp" />
                    <LinearLayout
                        android:gravity="center"
                        android:id="@+id/password_Image"
                        android:layout_centerVertical="true"
                        android:layout_width="45dp"
                        android:layout_height="45dp">
                        <ImageView
                            android:background="@mipmap/password"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/register_tv"
                android:text="信息登记"
                android:textColor="@color/mainColor"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="25dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/login_tv"
                android:text="登陆"
                android:textColor="#ffffff"
                android:gravity="center"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/btn_bg"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="-100dp"
                android:layout_width="70dp"
                android:layout_height="35dp" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>