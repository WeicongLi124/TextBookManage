<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/book_add_ll"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/book_add_title_tv"
        android:text="教材录入"
        android:textSize="30sp"
        android:textColor="@color/mainColor"
        android:layout_marginTop="-50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/book_add_isbn_edt"
            android:textSize="16sp"
            android:maxLines="1"
            android:maxLength="13"
            android:inputType="text"
            android:background="@drawable/login_border"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="45dp">
            <TextView
                android:text="ISBN："
                android:textSize="16sp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/book_add_name_edt"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/login_border"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="45dp">
            <TextView
                android:text="书名："
                android:textSize="16sp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/book_add_press_edt"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/login_border"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="45dp">
            <TextView
                android:text="出版社："
                android:textSize="14sp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/course_add_grade_rl"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/book_add_author_edt"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/login_border"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="45dp">
            <TextView
                android:text="作者："
                android:textSize="16sp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="45dp">
        <EditText
            android:id="@+id/book_add_price_edt"
            android:textSize="16sp"
            android:maxLines="1"
            android:inputType="text"
            android:background="@drawable/login_border"
            android:paddingStart="60dp"
            android:paddingEnd="10dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_width="280dp"
            android:layout_height="45dp"/>
        <LinearLayout
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_width="60dp"
            android:layout_height="45dp">
            <TextView
                android:text="价格："
                android:textSize="16sp"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/book_add_submit_btn"
        android:text="完成"
        android:textColor="#ffffff"
        android:gravity="center"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/btn_bg"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-100dp"
        android:layout_width="80dp"
        android:layout_height="40dp" />

</LinearLayout>