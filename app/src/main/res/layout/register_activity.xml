<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/register_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/register_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-50dp"
        android:text="教师登记"
        android:textColor="@color/mainColor"
        android:textSize="30sp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_id_edt"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@drawable/login_border"
            android:inputType="number"
            android:maxLines="1"
            android:paddingStart="60dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColorHint="@color/login_hintColor"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:id="@+id/register_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="工号："
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_psw_edt"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@drawable/login_border"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="8"
            android:maxLines="1"
            android:paddingStart="60dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColorHint="@color/login_hintColor"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码："
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/register_name_edt"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:background="@drawable/login_border"
            android:hint="请输入你的名字"
            android:inputType="text"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingStart="60dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:singleLine="true"
            android:textColorHint="@color/login_hintColor"
            android:textCursorDrawable="@drawable/edit_cursor"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名："
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <RadioGroup
            android:id="@+id/register_sex_rg"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:orientation="horizontal"
            android:paddingStart="60dp"
            android:weightSum="2">

            <RadioButton
                android:id="@+id/radio_male"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:checked="true"
                android:text="男" />

            <RadioButton
                android:id="@+id/radio_female"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="女" />
        </RadioGroup>

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_border"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/register_faculty_sp"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:paddingStart="50dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:popupBackground="#ffffff" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="院系："
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/register_grade_rl"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_border"
        android:orientation="horizontal">

        <Spinner
            android:id="@+id/register_grade_sp"
            android:layout_width="280dp"
            android:layout_height="45dp"
            android:paddingStart="50dp"
            android:paddingTop="12dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:popupBackground="#ffffff" />

        <LinearLayout
            android:layout_width="60dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="班级："
                android:textSize="16sp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/register_finish_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="-100dp"
        android:background="@drawable/btn_bg"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffff" />

</LinearLayout>